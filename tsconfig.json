{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src/app.ts",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["./src/**/*"],
  //   不打包的内容
  "exclude": ["node_modules"]
}
